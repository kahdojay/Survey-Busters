<div class="question">
  <h2> Question: <%= question.description %> </h2>
  <h3> Answers: </h3>
  <ul>
    <% question.answers.each do |answer| %>
    <input type='radio' name='response<%= question.id %>' value='<%= answer.id %>'><%= answer.description %><br>
    <% end %></br>
  </ul>
</div>

