<div class='container'>
  <form id="survey_submit" action="/survey/<%= survey.id %>/submit" method="GET">
    <h1> Survey Title: <%= survey.title %></h1>
    <h2> Created at: <%= survey.created_at.strftime("%c") %> </h2>


  <div id="questions">
    <!-- if current_user is the current survey's author, show stats -->
    <% if stat_array %>
      <% stat_array.each do |question_stat| %>
        <%= erb :'survey/_show_stats', locals: {question_stat: question_stat} %>
      <% end %>
    <% else %>
      <% survey.questions.each do |question| %>
        <%= erb :'survey/_show_each_question', locals: {question: question} %>
      <% end %>
      <input type='submit'>
    <% end %>
  </div>



  </form>
</div>
